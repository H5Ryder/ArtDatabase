extends layout

block content

  h1 #{title}: #{genre.name}
  p= genre.description

  if items.length

    p #[strong Delete the following items before attempting to delete this genre.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Items
      dl
        each item in items
          dt
            a(href=item.url) #{item.name}
          dd #{item.description}

  else
    p Do you really want to delete this Genre?

    form(method='POST')
      div.form-group
        input#genreid.form-control(type='hidden', name='genreid', value=genre._id )
 
      button.btn.btn-primary(type='submit') Delete
