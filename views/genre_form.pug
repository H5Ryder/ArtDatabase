extends layout

block content

  h1 #{title}

  if !genre

   h2 Existing Genres
   ul
     for genre in genres 
       li !{genre.name} 

  form(method='POST')
    div.form-group
      label(for='genre.name') Genre:
      input#name.form-control(type='text', placeholder='Name of Genre' name='name' required value=(undefined===genre ? '' : genre.name) )
    div.form-group
      label(for='genre.description') Description:
      input#name.form-control(type='text', placeholder='Description' name='description' required value=(undefined===genre ? '' : genre.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

 

    
